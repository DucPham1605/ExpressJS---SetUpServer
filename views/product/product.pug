extends ../layouts/common.pug

block content
    h1(class="mb-5") Products
    .container.mb-5
      .row
        each product in products
            .col-md-3
              .card.mb-3
                img.card-img-top(src=product.img, alt='Card image cap')
                .card-body
                  h5.card-title=product.name
                  p.card-text=product.title

    nav
      ul.pagination.justify-content-center
            li.page-item
              a.page-link(href='#') Previous
            li.page-item
              a.page-link(href='#')=page-1
            li.page-item
              a.page-link(href='#')=page 
            li.page-item
              a.page-link(href='#')=page+1
            li.page-item
              a.page-link(href='#') Next





