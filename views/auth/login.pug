extends ../layouts/common.pug

block content
    h1 Log In 
    if errors
      each error in errors
        .alert.alert-danger=error

    form(action="/auth/login",method="POST")
        label Email
        input(type="text",name="email",class="form-control mb-2",value=values ? values.email : '')
        label Password
        input(type="password",name="password",class="form-control mb-2",value=values ? values.password : '')
        button(class="btn btn-primary") Log In
